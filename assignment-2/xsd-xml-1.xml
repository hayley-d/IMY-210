<b:menu 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="b_menu.com b.xsd"
	xmlns:b="b_menu.com"> 
	<!-- <menu> Can hold between 2 to 4 food items -->

	<b:food id="BM01"> 
		<!-- id has to be two character followed by 2 digits -->
		<!-- elements within <food> must all appear, but in any order-->
		<b:name>Scrambled Eggs</b:name>
		<!-- the <name> element must be less than 50 characters-->
		<b:price>50</b:price>
    		<!-- the <price> element must hold a positive integer no large than 999-->
		<b:description>Fluffy eggs cooked to perfection.</b:description>
		<!-- the <description> element must be less than 50 characters-->
	</b:food>

	<b:food id="BM02">
		<b:name>Belgian Waffles</b:name>
